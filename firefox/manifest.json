{
  "manifest_version": 2,
  "name": "Tab Management",
  "version": "1.6.2",
  "description": "Press Alt+Shift+D to duplicate the current tab (Option+Shift+D on Mac). Shortcut is configurable.",
  "homepage_url": "https://github.com/mattgauf/ff-duplicate-tab",
  "author": "Matt Gauf",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "popup.html",
    "browser_style": true
  },
  "commands": {
    "duplicate-tab": {
      "suggested_key": { "default": "Ctrl+Alt+D" },
      "description": "Duplicate the current tab"
    },
    "toggle-pinned-tab": {
      "suggested_key": { "default": "Ctrl+Alt+P" },
      "description": "Toggle pinning the tab"
    }
  },
  "permissions": [
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "duplicate-and-pin@firefox.mattgauf.com",
      "strict_min_version": "91.0"
    }
  }
}
